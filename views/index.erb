<!DOCTYPE html>
<html>

  <head>
    <title>Feed Me London</title>

    <link rel="stylesheet" type="text/css" href="/css/reset.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href='/css/lunch.css' rel='stylesheet'>
    <link href='//fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
  </head>

  <body>
    <section>
      <!-- <button data-option='list' id="list_button">List</button> -->
      <!-- <button data-option='map' id="map_button">Map</button> -->
      <aside id='navigation'>
        <img src="/images/feedme.png" alt="Feed me Logo">
        <nav>
          <ul><!-- button category template rendered here--></ul>
        </nav>
        <footer>
          Made by <a href="https://twitter.com/chloe_does">Chloe Do.es</a> &
          <a href="https://twitter.com/ecomba">Mr Riepenhausen</a>
        </footer>
      </aside>
      <section id='map'></section>
      <section id='results'>
        <header>
          <h1>Welcome to Feed Me London!</h1>
          <h2>Please allow us to use your location!</h2>
          <h3>(we need it in order to find nice places to dine near you)</h3>
          <img src='/images/cat.jpg'/>
        </header>
      </section>
    </section>
    <footer>
    </footer>
    <template id='profile_template' type="text/x-handlebars-template">
      <article>
        <span>
          <a target="_blank" href="https://twitter.com/share?text=I%20am%20going%20to%20@{{{venue.name}}}%20-%20{{venue.location.address}}&hashtags=feedme&via=chloe_does%20%26%20@ecomba"><img src="/images/twitter-big.png"/></a>
        </span>
        <h1>
          <a href="{{venue.url}}" target="_blank">{{venue.name}}</a>
        </h1>
        <p>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script></p>
        <p>{{venue.location.distance}}m from you</p>
        <p><small>{{{price venue.price.message}}} {{{stars venue.rating}}}</small></p>
        <address>
          <a target="_blank" href="http://citymapper.com/directions?startcoord={{currentLocation.latitude}},{{currentLocation.longitude}}&startname=Current+Location&startaddress=Current+Location&endcoord={{venue.location.lat}},{{venue.location.lng}}&endname={{venue.name}}&endaddress={{venue.location.address}}%20({{venue.location.crossStreet}})
          ">{{venue.location.address}} {{venue.location.postalCode}}</a>&nbsp;&nbsp;<a href="citymapper://directions?startcoord={{currentLocation.latitude}},{{currentLocation.longitude}}&startname=Current+Location&startaddress=Current+Location&endcoord={{venue.location.lat}},{{venue.location.lng}}&endname={{venue.name}}&endaddress={{venue.location.address}}%20({{venue.location.crossStreet}})
          "><img src="/images/citymapper.png"></a></address>
        <footer>{{venue.hours.status}}</footer>
      </article>
    </template>
    <template id='categories' type="text/x-handlebars-template">
      {{#categories}}
        <li class="button" data-query='{{query}}' id={{query}}>
          <a href='#' data-query='{{query}}'>{{name}}</a>
        </li>
      {{/categories}}
    </template>
    <script src='//code.jquery.com/jquery-2.0.3.min.js'></script>
    <script src='/js/underscore.js'></script>
    <script src='/js/handlebars.js'></script>
    <script src="//maps.google.com/maps/api/js?sensor=true"></script>
    <script src='/js/gmaps.js'></script>
    <script src='/js/lunch_me.js'></script>
    <script src="/js/app.js"></script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-59238262-1', 'auto');
      ga('send', 'pageview');
</script>
  </body>
</html>
